<idea-plugin>
    <id>org.endpointdeps.Recursive-usages-Java</id>
    <name>Tree of Usages - Java</name>
    <vendor>Timur Mukhatov, Eric Eldard</vendor>
    <version>1.3-Java</version>

    <idea-version since-build="232.2" />

    <description><![CDATA[
    Replaced by description.html ...............................................
    ............................................................................
    ]]></description>

    <change-notes><![CDATA[
    Replaced by change-notes.html ..............................................
    ............................................................................
    ]]></change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Tree of Usages" icon="AllIcons.Actions.Refresh" anchor="right" factoryClass="treeOfUsages.PluginFactory"/>
    </extensions>

    <actions>
        <action id="findUsagesExcludingParentsAction" class="treeOfUsages.action.FindUsagesExcludingParentsAction" text="Build a Tree of Usages"/>
        <action id="findUsagesIncludingParentsAction" class="treeOfUsages.action.FindUsagesIncludingParentsAction" text="Build a Tree of Usages, including immediate parent methods"/>
        <action id="stopFindUsagesAction" class="treeOfUsages.action.StopFindUsagesAction" text="Stop Building a Tree of Usages"/>
        <action id="expandTreeAction" class="treeOfUsages.action.ExpandTreeAction" text="Expand All"/>
        <action id="collapseTreeAction" class="treeOfUsages.action.CollapseTreeAction" text="Collapse All"/>
    </actions>
</idea-plugin>